# PT Smart CRM - Docker Environment Configuration
# Copy this file to .env and adjust values as needed

# Application
APP_NAME="PT Smart CRM"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=http://localhost:8000

# Database (Docker services)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=ptsmart_crm
DB_USERNAME=ptsmart_user
DB_PASSWORD=ptsmart_password

# Cache & Session (Redis)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=redis

# Redis (Docker service)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (Mailpit for development)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@ptsmart-crm.local"
MAIL_FROM_NAME="${APP_NAME}"

# File Storage
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting
BROADCAST_DRIVER=log

# API Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
SESSION_DOMAIN=localhost

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000/api
